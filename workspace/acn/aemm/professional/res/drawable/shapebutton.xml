<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#FFA02F"
                android:endColor="#FFA02F"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#787878" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#FFA02F"
                android:endColor="#FFA02F"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#787878" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>       
        <shape>
            <gradient
                android:startColor="#F5F5F5"
                android:endColor="#BDBDBD"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#787878" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>


