<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@drawable/sys_background"
	android:gravity="center_horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout android:layout_width="wrap_content"
		android:orientation="vertical" android:layout_height="wrap_content">
		<ImageView android:src="@drawable/sys_login_logo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<TableLayout android:layout_width="wrap_content" android:layout_gravity="center"
			android:background="@drawable/sys_login_input_area"
			android:paddingLeft="70dip" android:layout_height="wrap_content">
			<TableRow>
				<FrameLayout android:layout_width="fill_parent"
					android:layout_marginTop="2dip"
					android:layout_height="wrap_content">
					<EditText android:id="@+id/login$et_loginName"
						android:textSize="15dip" android:layout_height="36dip"
						android:singleLine="true" android:layout_width="200dip"
						android:background="@color/trans" />
					<ImageButton
						android:id="@+id/login$imgbtn_selectUser"
						android:layout_gravity="right" android:layout_width="wrap_content"
						android:layout_marginRight="10dip"
						android:layout_height="wrap_content"
						android:background="@drawable/sys_login_input_select_style" />
				</FrameLayout>
			</TableRow>
			<TableRow>
				<EditText android:id="@+id/login$et_passWord"
					android:gravity="center_vertical" android:layout_marginTop="2dip"
					android:textSize="15dip" android:layout_height="36dip"
					android:singleLine="true" android:layout_width="fill_parent"
					android:password="true" android:background="@color/trans" />
			</TableRow>
		</TableLayout>
		<LinearLayout android:layout_width="wrap_content"
			android:orientation="horizontal"
			android:layout_height="wrap_content">
			<CheckBox android:id="@+id/isOffline" android:text="联线登录"
				android:layout_width="fill_parent" android:layout_marginLeft="5dip"
				android:layout_height="wrap_content"
				android:gravity="center_vertical|left" android:checked="false" />
			<CheckBox android:id="@+id/isAutoLogin" android:text="自动登录"
				android:layout_width="fill_parent" android:layout_marginLeft="5dip"
				android:layout_height="wrap_content"
				android:gravity="center_vertical|left" android:checked="false" />
		</LinearLayout>
		<ImageButton android:layout_width="271dip"
			android:id="@+id/login$btn_submit" android:layout_height="41dip"
			android:layout_marginTop="8dip" android:layout_gravity="center"
			android:src="@drawable/sys_login_submit_style" />
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout android:layout_gravity="bottom"
			android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/bottom_bar_img">
			<ImageButton android:layout_alignParentBottom="true"
				android:id="@+id/login$btn_sys_setting"
				android:layout_gravity="center" android:layout_marginTop="6.0dip"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:paddingBottom="0dip"
				android:layout_marginBottom="0dip" android:layout_weight="1.0"
				android:src="@drawable/sys_setting_style"
				android:background="@color/trans" />
			<ImageButton android:layout_alignParentBottom="true"
				android:layout_gravity="center" android:layout_marginTop="6.0dip"
				android:id="@+id/login$btn_net_setting" android:layout_weight="1.0"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:paddingBottom="0dip"
				android:layout_marginBottom="0dip"
				android:src="@drawable/sys_netsetting_style"
				android:background="@color/trans" />
			<ImageButton android:layout_alignParentBottom="true"
				android:layout_gravity="center" android:layout_marginTop="6.0dip"
				android:id="@+id/login$btn_sys_exit" android:layout_weight="1.0"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:paddingBottom="0dip"
				android:layout_marginBottom="0dip"
				android:src="@drawable/sys_exit_style"
				android:background="@color/trans" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
