<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/sys_background">
	<include layout="@layout/sys_head" />
	<ScrollView android:background="@drawable/sys_view_bg"
		android:isScrollContainer="true" android:padding="10dip"
		android:layout_height="fill_parent" android:layout_width="fill_parent">
		<TableLayout android:layout_height="wrap_content"
			android:layout_width="fill_parent">
			<TableRow android:layout_height="wrap_content"
				android:paddingBottom="10dip" android:layout_width="fill_parent">
				<LinearLayout android:paddingLeft="20dip"
					android:padding="0dip" android:layout_height="wrap_content"
					android:layout_width="fill_parent">
					<ImageView android:layout_width="wrap_content"
						android:layout_centerHorizontal="true" android:layout_height="wrap_content"
						android:src="@drawable/sys_enter" />
					<TextView android:layout_width="wrap_content"
						android:paddingTop="10dip" android:layout_centerHorizontal="true"
						android:textColor="@color/view_title" android:textSize="20sp"
						android:layout_height="fill_parent" android:gravity="left"
						android:text="密码修改" />
				</LinearLayout>
			</TableRow>
			<TableRow android:layout_height="1dip" android:background="@drawable/sys_break_line"
				android:layout_width="fill_parent" android:layout_marginBottom="5dip">
			</TableRow>
			<TableRow android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal">
				<TextView android:singleLine="true" 
					android:textColor="@color/view_title" android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:text="原始密码 :">
				</TextView>
			</TableRow>
			<TableRow android:layout_width="fill_parent" android:paddingLeft="20dip"
				android:gravity="center_vertical" android:layout_height="wrap_content"
				android:orientation="horizontal">
				 <EditText android:id="@+id/password$et_old_psw"  android:password="true"
					android:singleLine="false" android:textColor="@color/view_value"
					android:layout_width="260dip" android:layout_height="wrap_content"/> 
			</TableRow>
			<TableRow android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal">
				<TextView android:singleLine="true"
					android:textColor="@color/view_title" android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:text="新密码 :">
				</TextView>
			</TableRow>
			<TableRow android:layout_width="fill_parent" android:paddingLeft="20dip"
				android:gravity="center_vertical" android:layout_height="wrap_content"
				android:orientation="horizontal" >
				 <EditText android:id="@+id/password$et_new_psw" android:password="true"
					android:singleLine="false" android:textColor="@color/view_value"
					android:layout_width="260dip" android:layout_height="wrap_content"/> 
			</TableRow>
			<TableRow android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal">
				<TextView android:singleLine="true"
					android:textColor="@color/view_title" android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:text="确认密码 :">
				</TextView>
			</TableRow>
			<TableRow android:layout_width="fill_parent" android:paddingLeft="20dip"
				android:gravity="center_vertical" android:layout_height="wrap_content"
				android:orientation="horizontal">
				 <EditText android:id="@+id/password$et_affirm_psw" android:password="true"
				    android:singleLine="false" android:textColor="@color/view_value"
					android:layout_width="260dip" android:layout_height="wrap_content"/> 
			</TableRow>
			<TableRow android:layout_width="fill_parent" android:paddingLeft="20dip"
				android:gravity="center_vertical" android:layout_height="wrap_content"
				android:orientation="horizontal" android:paddingTop="20dip">
				<Button android:id="@+id/password$btn_submit"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="@string/define" />
			</TableRow>
		</TableLayout>
	</ScrollView>
</LinearLayout>
			