<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:layout_width="fill_parent" android:id="@+id/meg_tv"
		android:layout_height="wrap_content" android:text="@string/hello" />
	<TextView android:text="@string/name_str" android:id="@+id/textView1"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
	<EditText android:id="@+id/name_et" android:layout_width="fill_parent"
		android:text="@string/name_default" android:layout_height="wrap_content"></EditText>
	<TextView android:text="@string/adress_str" android:id="@+id/textView2"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
	<EditText android:id="@+id/url_et" android:layout_width="fill_parent"
		android:text="@string/adress_default" android:layout_height="wrap_content"></EditText>
	<LinearLayout android:id="@+id/linearLayout1" android:layout_width="fill_parent" android:layout_height="wrap_content"  android:gravity="center_horizontal">
		<Button android:id="@+id/del_btn" android:layout_width="wrap_content" android:text="@string/del_str" android:layout_height="wrap_content"></Button>
		<Button android:id="@+id/add_btn" android:layout_width="wrap_content" android:text="@string/add_str" android:layout_height="wrap_content" android:layout_marginLeft="100dp"></Button>
	</LinearLayout>
</LinearLayout>
