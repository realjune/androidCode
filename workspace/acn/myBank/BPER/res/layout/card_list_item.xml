<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/two_row_item"
        android:layout_weight="2.94"
        android:orientation="vertical"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/card_list_cardname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_medium"
                android:text="Card Account"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="2dip"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/card_list_relations_icon"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_gravity="center"
                android:visibility="gone" >
            </ImageView>

            <ImageView
                android:id="@+id/card_list_special_icon"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_gravity="center"
                android:visibility="gone" >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:id="@+id/card_list_banlance_title"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.20"
                android:gravity="right"
                android:text="@string/available_account" />

            <TextView
                android:id="@+id/card_list_banlance_value"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="right"
                android:text="200000"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="5dip"
        android:layout_height="match_parent"
        android:layout_weight="0.03" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.03"
        android:src="@drawable/arrow_cards_go" />

</LinearLayout>