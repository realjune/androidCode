<?xml version="1.0" encoding="utf-8"?>
<com.accenture.mbank.view.LoansLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/tab_header_control" />

    <com.accenture.mbank.view.InnerScrollView
        android:id="@+id/parent_innser_scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/loans_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_large"
            android:orientation="vertical" >
        </LinearLayout>
    </com.accenture.mbank.view.InnerScrollView>

</com.accenture.mbank.view.LoansLayout>