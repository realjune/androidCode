<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/account_bk"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_small"
        android:orientation="vertical" 
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/payment_new_payee_plus_icon_size"
            android:layout_height="@dimen/payment_new_payee_plus_icon_size"
            android:src="@drawable/plus" />

        <com.custom.view.DoubleShadowTextView
            android:id="@+id/accountname_tv"
            style="@style/payment_white_shadow_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:lines="2"
            android:gravity="center"
            android:text="New\nPayee" />

        <com.custom.view.DoubleShadowTextView
            android:id="@+id/account_tv"
            style="@style/payment_white_shadow_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payee"
            android:gravity="center"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>