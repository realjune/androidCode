<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- animation object -->

    <ImageView
        android:id="@+id/arrow_up_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="84dp"
        android:background="@anim/arrow_up"
        android:visibility="invisible" />

    <!-- static object -->

    <ImageView
        android:id="@+id/arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="84dp"
        android:background="@drawable/arrow_blink_up"
        android:visibility="invisible" />

    <!-- static object -->

    <ImageView
        android:id="@+id/arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/arrow_down"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/arrow_blink_down"
        android:visibility="invisible" />

    <!-- animation object -->

    <ImageView
        android:id="@+id/arrow_down_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/arrow_down"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:background="@anim/arrow_down"
        android:visibility="invisible" />

</RelativeLayout>