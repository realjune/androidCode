<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <com.accenture.mbank.view.QuickReturnListView
        android:id="@+id/loan_item_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000" >
    </com.accenture.mbank.view.QuickReturnListView>

    <LinearLayout
        android:id="@+id/header_view_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include
            android:id="@+id/header_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/loans_header_layout" />

        <LinearLayout
            android:id="@+id/loan_detail_record"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:visibility="invisible" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:gravity="left"
                        android:paddingLeft="@dimen/padding_small"
                        android:text="@string/account_1"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/loan_account_value"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:gravity="left" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:gravity="left"
                        android:paddingLeft="@dimen/padding_small"
                        android:text="@string/type"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/loan_type_value"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:gravity="left" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:gravity="left"
                        android:paddingLeft="@dimen/padding_small"
                        android:text="@string/rate_mancanti"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/rate_mancanti_value"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:gravity="left" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:gravity="left"
                        android:paddingLeft="@dimen/padding_small"
                        android:text="@string/date_fine_paino"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/date_fine_paino_value"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:gravity="left" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:gravity="left"
                        android:paddingLeft="@dimen/padding_small"
                        android:text="@string/riferimento_applicato"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/riferimento_applicato_value"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:gravity="left" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2" >

                    <TextView
                        android:id="@+id/tasso_finito_text"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:gravity="left"
                        android:paddingLeft="@dimen/padding_small"
                        android:text="@string/tasso_finito"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tasso_finito_value"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:gravity="left" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:gravity="left"
                        android:paddingLeft="@dimen/padding_small"
                        android:text="@string/garanzia_ipotecaria"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/garanzia_ipotecaria_value"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:gravity="left" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>