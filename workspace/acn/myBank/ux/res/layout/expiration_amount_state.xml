<?xml version="1.0" encoding="utf-8"?>
<com.accenture.mbank.view.ExpirationAmountStateItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_small"
    android:paddingRight="@dimen/padding_small" >

    <TextView
        android:id="@+id/state_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="@string/expiration_1" />

    <TextView
        android:id="@+id/state_amo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/amount_2" />

    <ImageView
        android:id="@+id/state_sta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

</com.accenture.mbank.view.ExpirationAmountStateItem>