<?xml version="1.0" encoding="utf-8"?>
<com.accenture.mbank.view.PortfolioDetailItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="5" >

    <TextView
        android:id="@+id/port_detail_title"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_weight="2"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="12sp"
        android:text="title" />

    <TextView
        android:id="@+id/port_detail_quantity"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:textSize="12sp"
        android:gravity="center"
        android:text="quantity" />

    <TextView
        android:id="@+id/port_detail_price"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:textSize="12sp"
        android:gravity="center"
        android:text="price" />

    <TextView
        android:id="@+id/port_detail_date_price"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="12sp"
        android:gravity="center"
        android:text="date price" />

</com.accenture.mbank.view.PortfolioDetailItem>