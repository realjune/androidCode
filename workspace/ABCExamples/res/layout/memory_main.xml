<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/get_memory_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onMemoryButtonClicked"
            android:text="内存" />

        <TextView
            android:id="@+id/memory_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/get_memory_info_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onMemoryInfoButtonClicked"
            android:text="内存" />

        <TextView
            android:id="@+id/memory_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/tatol_memory_pkg_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onMemoryPkgButtonClicked"
            android:text="pkgStats" />

        <TextView
            android:id="@+id/tatol_memory_pkg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true" />
    </LinearLayout>

    <ListView
        android:id="@+id/pkg_stats_ls"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>

</LinearLayout>