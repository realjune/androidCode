<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_xLarge"
        android:layout_marginRight="@dimen/margin_xLarge"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/bill_holder_tv"
            style="@style/new_payee_lable"
            android:text="@string/bill_holder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/bill_holder_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:editable="false"
                android:enabled="false" />

            <ImageButton
                android:id="@+id/bill_holder_ibtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_edit" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_xLarge"
        android:layout_marginRight="@dimen/margin_xLarge"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/account_number_tv"
            style="@style/new_payee_lable"
            android:text="@string/account_number" />

        <EditText
            android:id="@+id/account_number_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <TextView
            style="@style/new_payee_lable"
            android:text="@string/amount_doller" />

        <EditText
            android:id="@+id/amount_doller_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <TextView
            style="@style/new_payee_lable"
            android:text="@string/due_to" />

        <EditText
            android:id="@+id/due_to_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <TextView
            style="@style/new_payee_lable"
            android:text="@string/payable_to" />

        <EditText
            android:id="@+id/payable_to_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <TextView
            style="@style/new_payee_lable"
            android:text="@string/bill_number" />

        <EditText
            android:id="@+id/bill_number_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/new_payee_lable"
                android:text="@string/type_1" />

            <RadioGroup
                android:id="@+id/type_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/mav_rbtn"
                    style="@style/gray_text_white_shadow_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mav" />

                <RadioButton
                    android:id="@+id/rav_rbtn"
                    style="@style/gray_text_white_shadow_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rav" />
            </RadioGroup>
        </LinearLayout>

        <TextView
            style="@style/new_payee_lable"
            android:text="@string/description_1" />

        <EditText
            android:id="@+id/_description_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:lines="3" />
    </LinearLayout>

</LinearLayout>